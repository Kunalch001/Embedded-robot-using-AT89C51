#include<reg51.h>
sbit m1p=P1^0;
sbit m1n=P1^1;
sbit m2p=P1^2;
sbit m2n=P1^3;
sbit sw1=P1^0;
sbit sw2=P1^1;
sbit sw3=P1^2;
sbit sw4=P1^3;
sbit sw5=P1^4;

void main()
{
	m1p=m1n=m2p=m2n=0;
	while(1)
	{
		if(sw1==0)
		{
			m1p=1;
			m1n=0;
			m2p=1;
			m2n=0;
		}
		if(sw2==0)
		{
			m1p=0;
			m1n=1;
			m2p=0;
			m2n=1;
		}
		if(sw3==0)
		{
			m1p=0;
			m1n=1;
			m2p=1;
			m2n=0;
		}
		if(sw4==0)
		{
			m1p=1;
			m1n=0;
			m2p=0;
			m2n=1;
		}
		if(sw5==0)
		{
			m1p=0;
			m1n=0;
			m2p=0;
			m2n=0;
		}
	}
}
